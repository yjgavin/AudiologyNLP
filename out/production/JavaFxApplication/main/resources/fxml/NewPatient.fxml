<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="main.java.com.controllers.NewPatientController"
            prefWidth="700" prefHeight="550">

<children>
    <Label alignment="CENTER" layoutX="50.0" layoutY="100.0" prefHeight="36.0" prefWidth="150.0" text="New Document">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <Button layoutX="70.0" layoutY="420.0" mnemonicParsing="false" prefWidth="100.0" onAction="#processHome" text="Back"/>

    <Separator layoutX="225.0" layoutY="75.0" orientation="VERTICAL" prefHeight="400.0" prefWidth="0.0" />

    <Label layoutX="275.0" layoutY="225.0" prefWidth="170.0" text="Select New Document">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>

    <TextField layoutX="275.0" layoutY="275.0" prefWidth="280.0" />

    <Label id="FilePath" fx:id="FilePath" layoutX="280.0" layoutY="280.0" prefWidth="300.0" text="FilePath">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>

    <Button onAction="#processLoadFile" layoutX="550.0" layoutY="275.0" mnemonicParsing="false" prefWidth="80.0" text="Browse" />
    <Button layoutX="550.0" layoutY="420.0" mnemonicParsing="false" prefWidth="80.0" text="Scan" onAction="#processScan"/>
</children>

</AnchorPane>
